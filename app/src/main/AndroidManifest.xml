<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.thelosergeek.todoapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_app_icon_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_app_icon_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.NewNoteActivity"></activity>
        <activity android:name=".TodoDoneActivity" />
        <activity android:name=".ui.TaskActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>